{
    "name": "@bragnikita/mystorybook-backend",
    "version": "0.0.1",
    "description": "",
    "main": "index.ts",
    "scripts": {
        "serve-watch": "nodemon",
        "serve": "ts-node src/index.ts --config server/.env",
        "test": "jest --detectOpenHandles --runInBand --forceExit",
        "build": "tsc",
        "build-prod": "tsc -P tsconfig.prod.json",
        "start-prod": "node dist/index.js",
        "clean-dist": "rimraf dist/",
        "format": "prettier --write src/**/*.ts"
    },
    "author": "bragnikita",
    "license": "MIT",
    "dependencies": {
        "fastify": "^3.27.1",
        "fastify-cors": "^6.0.2",
        "fastify-jwt": "^4.1.3",
        "fastify-multipart": "^5.3.1",
        "fastify-static": "^4.5.0",
        "js-yaml": "^4.1.0",
        "knex": "^1.0.3",
        "lodash": "^4.17.21",
        "luxon": "^2.3.0",
        "mri": "^1.2.0",
        "mysql2": "^2.3.3"
    },
    "devDependencies": {
        "@swc/core": "^1.2.143",
        "@types/jest": "^27.4.0",
        "@types/js-yaml": "^4.0.5",
        "@types/lodash": "^4.14.178",
        "@types/luxon": "^2.0.9",
        "@types/node": "^17.0.18",
        "@types/sinon": "^10.0.11",
        "jest": "^27.5.1",
        "nodemon": "^2.0.15",
        "prettier": "2.5.1",
        "rimraf": "^3.0.2",
        "sinon": "^13.0.1",
        "ts-jest": "^27.1.3",
        "ts-node": "^10.5.0",
        "typescript": "^4.5.5"
    },
    "nodemonConfig": {
        "watch": [
            "src/",
            "package.json",
            "server/.env"
        ],
        "delay": 2000,
        "execMap": {
            "ts": "yarn run serve"
        }
    }
}
